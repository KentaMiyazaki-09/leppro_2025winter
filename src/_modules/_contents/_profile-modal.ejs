<% profileList.forEach(element => { %>
  <div id="profile-modal-<%- element.name %>" class="profile-modal profile-modal--<%- element.name %> has-active">
  
    <div class="profile-modal__container">
  
      <div class="profile-modal__contents">
  
        <div class="profile-modal__question">
        <% element.question1.forEach(question => { %>
          <div class="profile-modal__question__item">
            <p class="profile-modal__question__item__q"><%- question.Q %></p>
            <p class="profile-modal__question__item__a"><%- question.A %></p>
          </div>
        <% }) %>
        </div>

        <div class="profile-modal__photo">
          <img class="profile-modal__photo__1" src="<%- rootURL %>/assets/img/profile/<%- element.name %>_1.png" alt="">
          <img class="profile-modal__photo__2" src="<%- rootURL %>/assets/img/profile/<%- element.name %>_2.png" alt="">

          <%- include("./_circle.ejs", {
            className: `circle--profile-modal circle--profile-modal--1 circle--${element.circleColor}`,
          }) %>
          <%- include("./_circle.ejs", {
            className: `circle--profile-modal circle--profile-modal--2 circle--${element.circleColor}`,
          }) %>
          <%- include("./_circle.ejs", {
            className: `circle--profile-modal circle--profile-modal--3 circle--${element.circleColor}`,
          }) %>
          <%- include("./_circle.ejs", {
            className: `circle--profile-modal circle--profile-modal--4 circle--${element.circleColor}`,
          }) %>
        </div>
  
        <div class="profile-modal__info">
          <p class="profile-modal__info__name"><%- element.name %></p>
          <p class="profile-modal__info__spot">
            <img class="profile-modal__info__spot__icon" src="<%- rootURL %>/assets/img/icon_pin.svg" alt="">
            <%- element.spot %>
          </p>
          <p class="profile-modal__info__status"><%- element.status %></p>
          <div class="profile-modal__info__link-box">
            <a href="<%- element.instagram %>" target="_blank" rel="noopener noreferrer" class="profile-modal__info__link">INSTAGRAM</a>
            <a href="<%- element.board %>" target="_blank" rel="noopener noreferrer" class="profile-modal__info__link">STAFF BOARD</a>
          </div>
        </div>
  
        <div class="profile-modal__question">
        <% element.question2.forEach(question => { %>
          <div class="profile-modal__question__item">
            <p class="profile-modal__question__item__q"><%- question.Q %></p>
            <p class="profile-modal__question__item__a"><%- question.A %></p>
